				{
					"listen": "test",
					"script": {
						"exec": [
							"// Testa se a criação deu certo\r",
							"pm.test(\"Status 200: Usuário Criado com Sucesso\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"// Define um ID de teste dinâmico para que as requisições PUT e DELETE funcionem\r",
							"var jsonData = pm.response.json();\r",
							"if (jsonData && jsonData.id) {\r",
							"    // Captura o ID retornado pelo servidor\r",
							"    pm.environment.set(\"id_teste\", jsonData.id);\r",
							"    console.log(\"ID de teste definido: \" + jsonData.id);\r",
							"} else {\r",
							"    // Se não retornar ID, tenta usar 1 (como fallback, mas deve ser evitado)\r",
							"    pm.environment.set(\"id_teste\", 1);\r",
							"    console.log(\"Falha ao obter ID, usando fallback: 1\");\r",
							"}\r",
							"\r",
							"// Testa se a mensagem de sucesso está correta\r",
							"pm.test(\"Resposta: Usuário inserido com sucesso\", function () {\r",
							"    pm.expect(jsonData.mensagem).to.eql(\"Usuário inserido com sucesso\");\r",
							"});"
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
			],
